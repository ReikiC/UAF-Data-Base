# ===== Database Configuration =====
DB_USER=postgres
DB_PASSWORD=postgres                   # ⚠️ Change this in production!
DB_NAME=universal_agent
DB_PORT=5432

# ===== PostgreSQL Performance Tuning =====
# Shared buffers (should be 25% of system RAM)
POSTGRES_SHARED_BUFFERS=256MB

# Maximum concurrent connections
POSTGRES_MAX_CONNECTIONS=200

# Work memory per connection (shared_buffers / max_connections)
POSTGRES_WORK_MEM=4MB

# ===== Backup Configuration =====
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"           # Cron expression: daily at 2 AM
